<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_header</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorHeaderText</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:padding">@dimen/header_text_padding</item>
    </style>

    <style name="PlayerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_player_name</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:layout_marginTop">@dimen/player_text_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/player_text_margin_bottom</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LifeIconText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/default_life</item>
        <item name="android:textSize">@dimen/text_size_life</item>
        <item name="android:textColor">@color/colorLifeText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="PlayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_start_button</item>
        <item name="android:textColor">@color/colorMainText</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="StartImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="RestartImageButton" parent="@style/StartImageButton">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="PlayerImageButton">
        <item name="android:onClick">onClickPlayerSelection</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="SelectedClassImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:src">@drawable/hunter_icon</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:layout_marginTop">@dimen/selected_class_iv_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/selected_class_iv_margin_bottom</item>
    </style>

    <style name="LifeImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/health_value_icon</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="ClassImage">
        <item name="android:onClick">onClickClassImage</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="Message">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_message</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>
</resources>
